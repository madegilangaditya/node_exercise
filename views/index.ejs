    <div class="row" style="text-align: center; display: flex; flex-wrap: wrap;">
      <% camps.forEach(function(camp){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
              <img src="<%= camp.image %>">
              <div class="caption">
                <h4><%= camp.title %></h4>
              </div>
              <p>
                <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">More info</a>
              </p>
            </div>
        </div>
      <% }) %>
    </div>
  </div>

